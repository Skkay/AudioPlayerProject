@using AudioPlayerProject.Models.Music;

@{
    Music music = ViewBag.Music;
    ViewData["Title"] = music.Title + (music.Artist == null ? "" : "- " + music.Artist);
}

<h3>@music.Title @(music.Artist == null ? "" : "- " + music.Artist)</h3>
<div id="waveform"></div>

<div class="d-flex justify-content-center">
    <button class="btn btn-primary mx-1" onclick="wavesurfer.playPause();">Play / Pause</button>
    <button class="btn btn-primary mx-1" onclick="wavesurfer.toggleMute();">Toggle Mute</button>
</div>

@section Scripts {
    <script src="https://unpkg.com/wavesurfer.js"></script>
    <script>
        var wavesurfer = WaveSurfer.create({
            container: '#waveform'
        });

        wavesurfer.load("@( "/" + ViewBag.BaseUploadsPath + "/" + music.Path )")
    </script>
}
